<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout  xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    
        
    <Button
        android:id="@+id/bt_back_level_mode"
        style="?android:attr/buttonStyleSmall"
        android:layout_width="60dp"
        android:layout_height="30dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="10dp"
        android:text="@string/menu" />

    <TextView
        android:id="@+id/tv_scramble_word"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/bt_back_level_mode"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="55dp"
        android:text="Large Text"
        android:textAppearance="?android:attr/textAppearanceLarge" />

    <EditText
        android:id="@+id/et_unscrambled_word"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv_scramble_word"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="44dp"
        android:ems="10">

        <requestFocus />
    </EditText>

    <Button
        android:id="@+id/bt_unscramble"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/et_unscrambled_word"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="59dp"
        android:text="@string/unscramble" />

    <Chronometer
        android:id="@+id/chronometer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/bt_back_level_mode"
        android:layout_centerHorizontal="true"
        android:text="Chronometer" />

</RelativeLayout>