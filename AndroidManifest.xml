<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.ufc.scramble_word.activity"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="10"
        android:targetSdkVersion="16" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name="com.ufc.scramble_word.activity.MainActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.ufc.scramble_word.activity.EasyModeGameActivity"
            android:label="@string/title_activity_easy_mode_game" >
        </activity>
        <activity
            android:name="com.ufc.scramble_word.activity.NormalModeGameActivity"
            android:label="@string/title_activity_normal_mode_game" >
        </activity>
        <activity
            android:name="com.HardModeGameActivity"
            android:label="@string/title_activity_hard_mode_game" >
        </activity>        
    </application>

</manifest>